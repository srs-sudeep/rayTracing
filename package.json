{
  "name": "raytracer-studio",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:docs": "cd docs && npm run start",
    "dev:all": "npm run dev & npm run dev:docs",
